# beat-books-data environment variables
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED
# =============================================================================

# PostgreSQL connection string (Neon.tech)
# Format: postgresql://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# =============================================================================
# SCRAPING (all optional, sensible defaults provided)
# =============================================================================

# Delay between scrape requests in seconds (must be > 0)
# Default: 60
SCRAPE_DELAY_SECONDS=60

# Page load timeout in seconds
# Default: 30
SCRAPE_REQUEST_TIMEOUT=30

# Maximum retry attempts for failed scrapes
# Default: 3
SCRAPE_MAX_RETRIES=3

# Enable proxy rotation for scraping
# Default: false
SCRAPE_USE_PROXY=false

# Comma-separated list of proxy URLs (only used if SCRAPE_USE_PROXY=true)
# Format: ["http://proxy1:port", "http://proxy2:port"]
# SCRAPE_PROXY_LIST=[]

# =============================================================================
# ODDS API (Phase 2 - optional)
# =============================================================================

# API key for The Odds API
ODDS_API_KEY=
ODDS_API_BASE_URL=https://api.the-odds-api.com

# =============================================================================
# APPLICATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Host and port for the FastAPI server
# Default: 0.0.0.0:8001
API_HOST=0.0.0.0
API_PORT=8001
